{
  "index_patterns": ["observability-*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.refresh_interval": "10s",
    "index.codec": "best_compression"
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "message": {
        "type": "text",
        "analyzer": "standard"
      },
      "level": {
        "type": "keyword"
      },
      "severity": {
        "type": "keyword"
      },
      "service": {
        "type": "keyword"
      },
      "hostname": {
        "type": "keyword"
      },
      "environment": {
        "type": "keyword"
      },
      "container_name": {
        "type": "keyword"
      },
      "kubernetes": {
        "properties": {
          "namespace_name": {
            "type": "keyword"
          },
          "pod_name": {
            "type": "keyword"
          },
          "container_name": {
            "type": "keyword"
          },
          "labels": {
            "type": "object"
          }
        }
      },
      "trace_id": {
        "type": "keyword"
      },
      "span_id": {
        "type": "keyword"
      },
      "http": {
        "properties": {
          "method": {
            "type": "keyword"
          },
          "status_code": {
            "type": "integer"
          },
          "url": {
            "type": "keyword"
          },
          "user_agent": {
            "type": "text"
          }
        }
      },
      "error": {
        "properties": {
          "kind": {
            "type": "keyword"
          },
          "message": {
            "type": "text"
          },
          "stack": {
            "type": "text"
          }
        }
      }
    }
  }
}