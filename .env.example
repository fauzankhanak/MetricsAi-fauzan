# AI-Powered Observability System Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# AI Configuration
# =============================================================================

# OpenAI API Key (required for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=2048

# =============================================================================
# Service URLs (Internal Docker Network)
# =============================================================================

# AI Processor Service
AI_PROCESSOR_URL=http://ai-processor:5000

# Data Source URLs
PROMETHEUS_URL=http://prometheus:9090
ELASTICSEARCH_URL=http://elasticsearch:9200
JAEGER_URL=http://jaeger:16686
QDRANT_URL=http://qdrant:6333

# =============================================================================
# External Access Ports
# =============================================================================

# Chat Interface (Frontend)
CHAT_FRONTEND_PORT=3000

# Grafana Dashboard
GRAFANA_PORT=3001

# Prometheus
PROMETHEUS_PORT=9090

# Jaeger UI
JAEGER_PORT=16686

# Chat API
CHAT_API_PORT=8000

# AI Processor API
AI_PROCESSOR_PORT=5000

# Elasticsearch
ELASTICSEARCH_PORT=9200

# Qdrant Vector Database
QDRANT_PORT=6333

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable structured logging (true/false)
STRUCTURED_LOGGING=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Data Processing Configuration
METRICS_AGGREGATION_WINDOW=5m
LOGS_RETENTION_PERIOD=7d
TRACES_SAMPLING_RATE=0.1

# AI Processing Configuration
VECTOR_DB_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100

# Cache Configuration
MEMORY_CACHE_SIZE_MB=512
CACHE_TTL_SECONDS=300

# =============================================================================
# Security Configuration
# =============================================================================

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=admin

# Enable/Disable Authentication (for future use)
ENABLE_AUTH=false

# =============================================================================
# Development Configuration
# =============================================================================

# Environment (development, production)
ENVIRONMENT=development

# Enable Debug Mode (true/false)
DEBUG_MODE=false

# Enable Hot Reload (for development)
HOT_RELOAD=false

# =============================================================================
# Resource Limits
# =============================================================================

# Memory Limits (for production deployments)
AI_PROCESSOR_MEMORY_LIMIT=2048m
CHAT_API_MEMORY_LIMIT=512m
ELASTICSEARCH_MEMORY_LIMIT=2048m

# CPU Limits
AI_PROCESSOR_CPU_LIMIT=2
CHAT_API_CPU_LIMIT=1

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Metrics Collection Interval
METRICS_SCRAPE_INTERVAL=15s

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s

# =============================================================================
# Data Retention
# =============================================================================

# Prometheus Data Retention
PROMETHEUS_RETENTION=200h

# Elasticsearch Index Retention
ELASTICSEARCH_RETENTION=30d

# Vector Database Retention
VECTOR_DB_RETENTION=7d

# =============================================================================
# External Services (Optional)
# =============================================================================

# Slack Integration (for alerts)
SLACK_WEBHOOK_URL=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# =============================================================================
# Advanced Configuration
# =============================================================================

# Custom Data Sources (comma-separated URLs)
CUSTOM_PROMETHEUS_TARGETS=
CUSTOM_LOG_SOURCES=

# Feature Flags
ENABLE_ANOMALY_DETECTION=true
ENABLE_ROOT_CAUSE_ANALYSIS=true
ENABLE_PERFORMANCE_PREDICTIONS=true
ENABLE_AUTO_SCALING_SUGGESTIONS=true